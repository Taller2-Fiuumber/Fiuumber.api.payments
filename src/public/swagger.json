{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Fiuumber User API",
    "description": "CRUD",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "https://fiuumber-api-payments.herokuapp.com/api/wallets-service",
      "description": "Heroku"
    },
    {
      "url": "http://localhost:8082/api/wallets-service",
      "description": "Localhost in port 8082"
    }
  ],
  "tags": [
    {
      "name": "Fiuumber - Wallets",
      "description": "API for wallets in the system"
    }
  ],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/wallet/{address}": {
      "parameters": [
        {
          "in": "path",
          "name": "address",
          "required": true,
          "description": "Wallet address",
          "schema": {
            "type": "string",
            "example": "0x235e10f22aA75CcAfF9724cE8e3519E99c786038"
          }
        }
      ],
      "get": {
        "tags": ["Wallet"],
        "summary": "Get wallet with given ID",
        "parameters": [
          {
            "in": "path",
            "name": "address",
            "required": true,
            "description": "Wallet address",
            "schema": {
              "type": "string",
              "example": "0x235e10f22aA75CcAfF9724cE8e3519E99c786038"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Wallet"
            }
          },
          "404": {
            "description": "Failed. Wallet not found."
          }
        }
      }
    },
    "/wallet/balance/{address}": {
      "parameters": [
        {
          "in": "path",
          "name": "address",
          "required": true,
          "description": "Wallet address",
          "schema": {
            "type": "string",
            "example": "0x235e10f22aA75CcAfF9724cE8e3519E99c786038"
          }
        }
      ],

      "get": {
        "tags": ["Wallet"],
        "summary": "Get all wallets in system",
        "parameters": [
          {
            "in": "path",
            "name": "address",
            "required": true,
            "description": "Wallet address",
            "schema": {
              "type": "string",
              "example": "0x235e10f22aA75CcAfF9724cE8e3519E99c786038"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Wallet"
            }
          }
        }
      }
    },
    "/wallet": {
      "get": {
        "tags": ["Wallet"],
        "summary": "Get all wallets in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Wallet"
            }
          }
        }
      },
      "post": {
        "tags": ["Wallet"],
        "summary": "Create a new wallet in system",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Wallet"
            }
          },
          "400": {
            "description": "Failed. Bad post data."
          }
        }
      }
    },

    "/deposit/withdrawOwner": {
      "post": {
        "tags": ["Deposit"],
        "summary": "Withdraw an amount of money from owner",
        "requestBody": {
          "description": "Administrator Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/DepositTransfer"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Deposit"
            }
          },
          "404": {
            "description": "Failed. Deposit not found."
          }
        }
      }
    },
    "/retrieveFromWallet": {
      "post": {
        "tags": ["Deposit"],
        "summary": "Retrieve certain amount of money from wallet",
        "requestBody": {
          "description": "Administrator Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/DepositFromRetrieve"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/DepositFromRetrieve"
            }
          },
          "404": {
            "description": "Failed. Deposit not found."
          }
        }
      }
    },
    "/depositFromSender": {
      "post": {
        "tags": ["Deposit"],
        "summary": "Send money to owner from an specific wallet ID",
        "requestBody": {
          "description": "Administrator Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/DepositFromSender"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/DepositFromSender"
            }
          },
          "404": {
            "description": "Failed. Deposit not found."
          }
        }
      }
    },
    "/depositFromSenderToReceiver": {
      "post": {
        "tags": ["Deposit"],
        "summary": "Send money from a sender wallet to a receiver wallet passing though the owner",
        "requestBody": {
          "description": "Administrator Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/DepositFromSenderToReceiver"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/DepositFromSenderToReceiver"
            }
          },
          "404": {
            "description": "Failed. Deposit not found."
          }
        }
      }
    },
    "/depositToReceiver": {
      "post": {
        "tags": ["Deposit"],
        "summary": "Deposit money from owner to a specific receiver",
        "requestBody": {
          "description": "Administrator Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/DepositToReceiver"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/DepositToReceiver"
            }
          },
          "404": {
            "description": "Failed. Deposit not found."
          }
        }
      }
    },
    "/deposits": {
      "get": {
        "tags": ["Deposit"],
        "summary": "Get deposits",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/DepositUpdate"
            }
          },
          "404": {
            "description": "Failed. Deposit not found."
          }
        }
      }
    },

    "/deposit/{depositTxHash}": {
      "parameters": [
        {
          "in": "path",
          "name": "depositTxHash",
          "required": true,
          "description": "Deposit transaction Hash id",
          "schema": {
            "type": "string",
            "example": "0x921340bfe5f055871a7b85e64c8992f0c9f7871b2ca4303e695a9915375c951f"
          }
        }
      ],
      "get": {
        "tags": ["Deposit"],
        "summary": "Get a deposit by its hash",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Deposit"
            }
          },
          "404": {
            "description": "Failed. Deposit not found."
          }
        }
      }
    }
  },

  "definitions": {
    "id": {
      "properties": {
        "uuid": {
          "type": "string"
        }
      }
    },
    "Wallet": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "number",
          "example": 1
        },
        "address": {
          "type": "string",
          "example": "0x6EB5d800214510B5d6e30c249C6EEF6651Ec74a6"
        },
        "privateKey": {
          "type": "string",
          "example": "0x8d731a0107299782fa4a572655f51abd4dc414dc95ea50984d3ce7a4a7d86cec"
        }
      }
    },
    "Deposit": {
      "type": "object",
      "properties": {
        "amountInEthers": {
          "type": "string",
          "example": "0.00001"
        },
        "senderAddress": {
          "type": "string",
          "example": "0xF3a225e3b022c9F252d162ede018330D036060fF"
        }
      }
    },
    "DepositFromSender": {
      "type": "object",
      "properties": {
        "amountInEthers": {
          "type": "string",
          "example": "0.00001"
        },
        "senderAddress": {
          "type": "string",
          "example": "0xF3a225e3b022c9F252d162ede018330D036060fF"
        }
      }
    },
    "DepositToReceiver": {
      "type": "object",
      "properties": {
        "amountInEthers": {
          "type": "string",
          "example": "0.00001"
        },
        "receiverAddress": {
          "type": "string",
          "example": "0x2AE9c10b967DD38Cdd9689C6958B794AB68e00F5"
        }
      }
    },
    "DepositFromSenderToReceiver": {
      "type": "object",
      "properties": {
        "amountInEthers": {
          "type": "string",
          "example": "0.00001"
        },
        "senderAddress": {
          "type": "string",
          "example": "0xF3a225e3b022c9F252d162ede018330D036060fF"
        },
        "receiverAddress": {
          "type": "string",
          "example": "0x2AE9c10b967DD38Cdd9689C6958B794AB68e00F5"
        }
      }
    },
    "DepositUpdate": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "number",
          "example": 1
        },
        "amountInEthers": {
          "type": "string",
          "example": "0.00001"
        },

        "senderAddress": {
          "type": "string",
          "example": "0xF3a225e3b022c9F252d162ede018330D036060fF"
        }
      }
    },
    "DepositFromRetrieve": {
      "type": "object",
      "properties": {
        "amountInEthers": {
          "type": "string",
          "example": "0.00001"
        },
        "retrieverAddress": {
          "type": "string",
          "example": "0x2AE9c10b967DD38Cdd9689C6958B794AB68e00F5"
        }
      }
    },
    "DepositTransfer": {
      "type": "object",
      "properties": {
        "amountInEthers": {
          "type": "string",
          "example": "0.00001"
        }
      }
    }
  }
}
